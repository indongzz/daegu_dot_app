<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ececec"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/myScheduleBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:src="@drawable/sch_colored"
                    android:scaleType="fitCenter"
                    android:padding="13dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/mySch_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 일정"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="1dp"
                    />

            </FrameLayout>
            
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/addScheduleBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:src="@drawable/addsch"
                    android:scaleType="fitCenter"
                    android:padding="13dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/addSch_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일정 추가"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="1dp"/>
            </FrameLayout>
            
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/recommendBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:src="@drawable/recom"
                    android:scaleType="fitCenter"
                    android:padding="13dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/recom_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="1dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/moreBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:src="@drawable/more"
                    android:padding="13dp"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/more_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="더보기"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="1dp"/>
            </FrameLayout>


        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>