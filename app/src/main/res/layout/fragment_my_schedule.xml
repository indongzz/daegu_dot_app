<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MySchedule.MyScheduleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include
            android:id="@+id/top_title"
            layout="@layout/layout_top_title" />

        <ImageView
            android:id="@+id/daeguImg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/daegu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_title"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#424242"
            android:alpha="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_title"/>
        
        <TextView
            android:id="@+id/tv_when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="언제 떠나세요?"
            android:textSize="42sp"
            android:textStyle="bold"
            android:fontFamily="@font/nanum_square"
            android:textColor="#ffffff"
            app:layout_constraintTop_toTopOf="@id/daeguImg"
            app:layout_constraintBottom_toBottomOf="@id/daeguImg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dateList"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:divider="#00000000"
            app:layout_constrainedHeight="true"
            app:layout_constraintHeight_max="340dp"
            app:layout_constraintTop_toBottomOf="@id/daeguImg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


        <Button
            android:id="@+id/addOtherSBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다른 일정 추가하기"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:background="#00ff0000"
            app:layout_constraintTop_toBottomOf="@id/dateList"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>