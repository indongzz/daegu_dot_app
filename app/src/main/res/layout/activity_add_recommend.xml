<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recommend.AddRecommendActivity">

    <include
        layout="@layout/layout_top_title"
        android:id="@+id/top_title"
        />

    <TextView
        android:id="@+id/add_mysch_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 일정"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/et_title"
        app:layout_constraintTop_toBottomOf="@id/top_title"
        android:layout_marginStart="5dp"
        />

    <Button
        android:id="@+id/add_mysch_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="일정 등록 +"
        android:background="@drawable/colorable_btn"
        android:backgroundTint="@color/transparentAccent"
        app:layout_constraintTop_toBottomOf="@id/add_mysch_tv"
        app:layout_constraintLeft_toLeftOf="@id/et_title"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:id="@+id/hash_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해시태그"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/add_mysch_btn"
        app:layout_constraintLeft_toLeftOf="@id/et_title"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hash_tv"
        app:layout_constraintLeft_toLeftOf="@id/et_title"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        app:selectionRequired="true"
        >
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/rating_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="별점"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/chip_group"
        app:layout_constraintLeft_toLeftOf="@id/et_title"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rating_tv"
        app:layout_constraintLeft_toLeftOf="@id/et_title"
        android:numStars="5"
        android:stepSize="0.5"
        android:isIndicator="false"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:theme="@style/RatingBarStyle"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:id="@+id/write_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글작성"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/rating_bar"
        app:layout_constraintLeft_toLeftOf="@id/et_title"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/write_tv"
        android:backgroundTint="@color/lightGray"
        android:hint="제목을 입력해주세요"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_title"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="15dp"
        android:background="@color/transparent"
        android:hint="내용을 입력해주세요"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/round_btn"
        android:backgroundTint="@color/colorPrimary"
        android:text="확인"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.9"
        />

</androidx.constraintlayout.widget.ConstraintLayout>