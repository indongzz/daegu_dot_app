<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MorePage.MyInformationActivity">


    <include
        android:id="@+id/top_title"
        layout="@layout/layout_top_title" />

    <View
        android:id="@+id/profile_frame"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/frame"
        app:layout_constraintTop_toBottomOf="@id/top_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="10dp"
        />


    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        app:layout_constraintTop_toTopOf="@id/profile_frame"
        app:layout_constraintBottom_toBottomOf="@id/profile_frame"
        app:layout_constraintLeft_toLeftOf="@id/profile_frame"
        android:layout_marginStart="10dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@id/profile_frame"
        app:layout_constraintBottom_toBottomOf="@id/profile_frame"
        app:layout_constraintLeft_toRightOf="@id/profile_image"
        android:layout_marginHorizontal="10dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="13sp"
            android:layout_below="@id/profile_name"
            />
    </RelativeLayout>


    <ListView
        android:id="@+id/myinfo_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/transparent"
        app:layout_constraintTop_toBottomOf="@id/profile_frame"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>